@model admin_web_sell_phone.Entity.tb_Hoadon

@{
    ViewData["Title"] = "Xóa hóa đơn";
}

<h1>Xóa hóa đơn</h1>

<h3>Bạn chắc chắn muốn xóa hóa đơn này?</h3>
<div>
    <h4>Hóa đơn</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã khách hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID_KhachHang)
        </dd>
        <dt class="col-sm-2">
            Mã nhân viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID_NhanVien)
        </dd>
        <dt class="col-sm-2">
            Ngày tạo phiếu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ngaytaophieu)
        </dd>
        <dt class="col-sm-2">
            Tổng đơn hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TongDon)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID_Hoadon" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Trở lại</a>
    </form>
</div>
